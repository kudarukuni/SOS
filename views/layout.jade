        link(rel='apple-touch-icon-precomposed', href='/img/ico/apple-touch-icon-57-precomposed.png')
    body
        
        header#header
            
            .header_top
                .container
                    .row
                        .col-sm-6
                            .contactinfo
                                ul.nav.nav-pills
                                    li
                                        a(href='tel:+263773280354' target='_blank')
                                            i.fa.fa-phone
                                            |  +263773280354
                                    li
                                        a(href='mailto:richardgwewera@gmail.com' target="_blank")
                                            i.fa.fa-envelope
                                            |  richardgwewera@gmail.com
                        .col-sm-6
                            .shop-menu.pull-right
                                ul.nav.navbar-nav
                                    -var orderCus = 'Account'
                                    -var link = '/sign-in'
                                    if customer
                                        -orderCus=customer.FullName
                                        -link='/usr/'
                                    li
                                        a(href=link)
                                            i.fa.fa-user
                                            =orderCus
                                    li
                                        a(href='/cart')
                                            i.fa.fa-shopping-cart
                                            |  My Cart
                                    //li
                                    //    a(href='/checkout')
                                    //        i.fa.fa-money
                                    //        |  Proceed to Checkout
                                    if customer
                                        li
                                            a(href='/sign-out')
                                                i.fa.fa-sign-out
                                                |  Sign Out
            ///header_top

            //header-middle
            .header-middle
                .container
                    .row
                        .col-sm-4
                            .logo.pull-left
                                a(href='/')
                                    img(src='/img/ecommerce.png', alt='ecommerce Logo')
                                    //h1
                                        span SME
                                        | Online Store
                                        i.fa.fa-shopping-cart
                        .col-sm-8                        
            ///header-middle

            //header-bottom
            .header-bottom
                .container
                    .row
                        .col-sm-9
                            .navbar-header
                                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                            .mainmenu.pull-left
                                ul.nav.navbar-nav.collapse.navbar-collapse
                                    li
                                        a(class={active: currentUrl === '/'}, href='/')
                                            | Home
                                    li
                                        a(class={active: currentUrl === '/usr'}, href='/usr')
                                            | Control Panel
                                    li
                                        a(class={active: currentUrl === '/cat'}, href='/cat')
                                            | Products
                                    li.dropdown
                                        a(class={active: currentUrl === '/services'}, href='/services')
                                            | Services
                                            i.fa.fa-angle-down
                                        ul.sub-menu(role='menu')
                                            li
                                                a(href='/services/shipment') Shipment
                                            li
                                                a(href='/services/return') Return Policy
                                            li
                                                a(href='/services/payment') Payment
                                            li
                                                a(href='/services/vouchers') Voucher
                                    li.dropdown
                                        a(class={active: currentUrl === '/press'}, href='/press')
                                            | Press
                                            i.fa.fa-angle-down
                                        ul.sub-menu(role='menu')
                                            li
                                                a(href='/press/careers') Careers
                                            li
                                                a(href='/press/partners') Partners
                                            li
                                                a(href='/press/privacy-terms') Privacy Terms
                                            li
                                                a(href='/press/about-us') About Us
                                    li
                                        a(class={active: currentUrl === '/contact-us'}, href='/contact-us') Contact Us
                        .col-sm-3
                            .search_box.pull-right
                                input(type='text', placeholder='Search')
            ///header-bottom
        ///header

        block content

