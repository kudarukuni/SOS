html
    head
        
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='S.O.S Online')
        meta(name='author', content='S.O.S. All rights Reserved')
        
        title= title + ' | SME Online Store'
        
        link(rel='stylesheet', href='/css/bootstrap.min.css')
